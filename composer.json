{
    "name": "adr/symfony2erlang-bundle",
    "description": "Bundle to connect Symfony2 to Erlang using several strategies",
    "keywords": ["symfony2", "erlang"],
    "homepage": "https://github.com/",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Marcos Quesada",
            "email": "marcos.quesadas@gmail.com"
        },
        {
            "name": "Jordi Llonch",
            "email": "llonch.jordi@gmail.com"
        }
    ],
    "require": {
        "php"                      : ">=5.3.0",
        "videlalvaro/php-amqplib"  : "v1.1"
    },
    "require-dev":{
        "symfony/symfony": "2.2.*",
        "doctrine/orm": "~2.2,>=2.2.3",
        "doctrine/doctrine-bundle": "1.2.*",
        "twig/extensions": "1.0.*",
        "symfony/assetic-bundle": "2.1.*",
        "symfony/swiftmailer-bundle": "2.2.*",
        "symfony/monolog-bundle": "2.2.*",
        "sensio/distribution-bundle": "2.2.*",
        "sensio/framework-extra-bundle": "2.2.*",
        "sensio/generator-bundle": "2.2.*",
        "jms/security-extra-bundle": "1.4.*",
        "jms/di-extra-bundle": "1.3.*",
        "mockery/mockery":"dev-master#1a1a222"
    },
     "autoload": {
        "psr-0": { "ADR\\Bundle\\Symfony2ErlangBundle": "" }
    },
    "minimum-stability": "dev",
    "target-dir": "ADR/Bundle/Symfony2ErlangBundle"
}
